{% extends 'Templates/base.html.twig' %}

{% block body%}
    <div class="card">
        {% for contact in contacts %}
                    <div class="card col-md-4 offset-4 border-dark my-3  bg-primary text-white">
                        <img class="card-img py-2"  alt="Responsive image" src="{% if contact.picture is not null %} {{ '/images/contacts/' ~ contact.picture }} {% else %} /images/contacts/head.png
            {% endif %}"/>
                        <div class="card-body border-top">
                            <h4 class="card-title text-center">{{ contact.name ~" "~ contact.surname }}</h4>
                            <p>Address: {{ contact.address }}</p>
                            <p>Phone: {{ contact.telephone }}</p>
                            <p>Note: {{ contact.note }}</p>
                            <p>Type: {{ contact.type }}</p>
                            <a class="btn btn-dark" href="{{ url('contacts_details',{'id':contact.id}) }}">Details</a>
                        </div>
                    </div>
        {% endfor %}
    </div>
{% endblock %}