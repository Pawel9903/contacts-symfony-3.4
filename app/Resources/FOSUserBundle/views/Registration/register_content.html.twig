{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

<div class="form-group">
    <label class="custom-control-label">E-mail</label>
    {{ form_widget(form.email) }}
</div>

<div class="form-group">
    <label class="custom-control-label">Login</label>
    {{ form_widget(form.username) }}
</div>

<div class="form-group">
    <label class="custom-control-label">Password</label>
    {{ form_widget(form.plainPassword.first) }}
</div>

<div class="form-group">
    <label class="custom-control-label">Repeat password</label>
    {{ form_widget(form.plainPassword.second) }}
</div>

<div class="form-group">
    <input class="btn btn-outline-success" type="submit" value="Register" />
</div>
{{ form_end(form) }}

